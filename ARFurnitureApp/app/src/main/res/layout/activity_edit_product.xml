<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPage">

    ​
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="455dp"
        android:layout_height="731dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">
        ​
        <ImageView
            android:id="@+id/product_photo_edit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            tools:srcCompat="@tools:sample/avatars" />
        ​
        <EditText
            android:id="@+id/product_name_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="70dp"
            android:text="product name" />
        ​
        <EditText
            android:id="@+id/product_price_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="130dp"
            android:text="price" />
        ​
        <EditText
            android:id="@+id/product_styles_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="190dp"
            android:text="style" />
        ​
        <EditText
            android:id="@+id/shipping_info_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="250dp"
            android:text="shipping info" />
        ​
        <EditText
            android:id="@+id/product_description_edit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="310dp"
            android:text="description" />
        ​
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="400dp"
            android:onClick="back"
            android:text="back" />
        ​

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginTop="600dp"
            android:onClick="edit"
            android:text="Edit the product"
            />
        ​
    </androidx.cardview.widget.CardView>
    ​
</androidx.constraintlayout.widget.ConstraintLayout>


